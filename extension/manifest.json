{
  "manifest_version": 3,
  "name": "trailMotion",
  "description": "Air gesture control for scrolling, clicking, and interaction via webcam + Python backend.",
  "version": "1.0.0",

  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "trailMotion"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "gestures/scroll.js",
        "content/content_script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
