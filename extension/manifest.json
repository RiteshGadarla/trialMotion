{
  "manifest_version": 3,
  "name": "trailMotion",
  "description": "Air gesture control for scrolling, clicking, and interaction via webcam + Python backend.",
  "version": "1.0.0",

  "permissions": [
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "trailMotion"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content_script.js"]
    }
  ]
}
