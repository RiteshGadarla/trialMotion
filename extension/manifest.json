{
  "manifest_version": 3,
  "name": "extension",
  "version": "1.0",
  "description": "Gesture-based Chrome controller (camera window method).",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:5001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gesture Control"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "camera.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}